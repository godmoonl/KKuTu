extends m_layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')
	link(rel='stylesheet', href='/css/in_portal.css')

block JS
	script(type='text/javascript', src='/js/in_portal.min.js')
	if PUBLIC && false
		script(async, src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
		script (adsbygoogle = window.adsbygoogle || []).push({google_ad_client: "ca-pub-3784210391085906", enable_page_level_ads: true});

block Middle
	+separator(5)
	div(style='margin-left: calc(50% - 170px);')
		div(style='float: left; padding-left: 70px;margin-top:20px;')
			img#logo(src='/img/kkutu/short_logo.png')
		div.jjoriping(style='margin-top: 10px;margin-left:10px;')
			button#game-start.jjo-display= L('gameStart')
	div#discord-box(style='float: left;width: 325px;height:50px;margin-left:47px;margin-top:20px;background-color: #4A00E0;')
		div.discord-box
			h3.discord-title
				a(target='_blank', href='//discord.gg/hXfzwTh', style='padding:20px 100px')= L('discord')
	div#discord-box(style='float: left;width: 325px;height:50px;margin-top:20px;margin-left:47px;background-color: #4A00E0;')
		div.discord-box
			h3.discord-title
				a(target='_blank', href='//goo.gl/forms/DgWYtCaBwOG5ybSB2', style='padding:20px 100px')= L('gmlet')
	div(style='float: left;margin-top:20px; margin-left: calc(50% - 160px);')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	//-
		div(style='float: left; width: calc(100% - 4px); border: 2px solid #CCC; margin-top: 10px; background-color: #EEE;')
		iframe#kkutu-bulletin(width='100%', height='400px', src='/kkutu_bulletin.html')
	+separator(10)

block Bottom
	div.bottom-legal!= L('dictionarySupport')
	div.bottom-legal!= L('etcSupport')